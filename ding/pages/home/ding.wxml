<!-- 输入文字 -->
<view class="weui-cells weui-cells_after-title">
    <view class="weui-cell">
        <view class="weui-cell__bd">
            <textarea class="weui-textarea" placeholder="请输入文本" style="height: 5.3em" />
            <view class="weui-textarea-counter">0/200</view>
        </view>
    </view>
</view>
<!-- 输入照片 -->
<view class="weui-media-box__hd weui-media-box__hd_in-appmsg">
    <image class="weui-media-box__thumb" bindtap='choosePicture' src="../images/picture.svg"/>
    <image class="weui-media-box__thumb" src="../images/camera.svg"/>
</view>